{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Distribution of Subscribers by Category",
  "data": {"url": "data/SMA.csv"},
  "width": 800,
  "height": 400,

  
  
  "layer": [
        {
        "mark": {"type": "line", "point": false}
        },
        {
        "mark": {"type": "circle", "size": 80}
        }
    ],

  "encoding": {
    "x": {
      "field": "Age",
      "type": "quantitative",
      "title": "Average Views",
      "scale": {"type" : "linear", "domain": [18, 24]}
    },
    "y": {
      "field": "Avg_Daily_Usage_Hours",
      "aggregate": "mean",
      "type": "quantitative",
      "title": "Average Likes",
      "scale": {"type" : "linear", "domain": [0, 8]}
    },
    "color": {"field": "Relationship_Status", "type": "nominal", "scale": {"domain": ["Single", "In Relationship", "Complicated"], "range": ["#1f77b4", "#ff8B00", "#ff7f0e"]}}
  }
}