{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Distribution of Subscribers by Category", "fontSize" : 26},
  "data": {"url": "data/SMA.csv"},
  "height": 450,
  "width": "container",
  "autosize": {"type": "fit", "contains": "padding"},
  
  
  "layer": [
        {
        "mark": {"type": "line", "point": false}
        },
        {
        "mark": {"type": "circle", "size": 80}
        }
    ],

  "encoding": {
    "x": {
      "field": "Age",
      "type": "quantitative",
      "title": "Age",
      "scale": {"type" : "linear", "domain": [17, 25]}, "axis": {"tickCount": 6, "titleFontSize": 14}
    },
    "y": {
      "field": "Avg_Daily_Usage_Hours",
      "aggregate": "mean",
      "type": "quantitative",
      "title": "Average Daily Social Media Time (Hours)",
      "scale": {"type" : "linear", "domain": [0, 8]},
      "axis": {"titleFontSize": 14}
    },
    "color": {"field": "Relationship_Status", "type": "nominal", "scale": {"domain": ["Single", "In Relationship", "Complicated"], "range": ["#7DCE82", "#E8E288", "#FF8360"]}, "legend" : {"title" : "Relationship Status", "titleFontSize": 12, "labelFontSize": 12}},
    "tooltip": [
      {"field": "Relationship_Status", "title": "Relationship Status"},
      {"field": "Avg_Daily_Usage_Hours", "aggregate": "mean","title": "Average Daily Usage Hours", "format": ".2f"}
    ]
  }
}