{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Influencer Engagement Bubble Plot",
  "data": {"url": "./data/SM.csv"},
  "width": 800,
  "height": 400,

  "mark": {"type": "circle", "opacity": 0.7, "stroke": "black", "strokeWidth": 0.5},
  "encoding": {
    "x": {
      "field": "age",
      "type": "quantitative",
      "title": "Average Views",
      "scale": {"type" : "linear", "domain": [18, 65]}
    },
    "y": {
      "field": "daily_social_media_time",
      "aggregate": "mean",
      "type": "quantitative",
      "title": "Average Likes",
      "scale": {"type" : "linear", "domain": [0, 4]}
    }
  },
  "config": {
    "view": {"stroke": null},
    "legend": {"titleFontSize": 12, "labelFontSize": 11}
  }
}
