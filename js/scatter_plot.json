{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Boxplot of Social Media Time by Age", "fontSize" : 30},
  "data": {
    "url": "data/SMA.csv"
  },
  "height": 600,
  "width": "container",
  "autosize": {"type": "fit", "contains": "padding"},
  "mark": {"type" : "boxplot"},
  "encoding": {
    "x": {
      "field": "Age",
      "type": "quantitative",
      "title": "Age",
      "scale": {
        "type": "linear",
        "domain": [
          17,
          25
        ]
      },
      "axis": {"tickCount": 6, "titleFontSize": 14}
    },



  "y": {
    "field": "Avg_Daily_Usage_Hours",
    "aggregate": "mean",
    "type": "quantitative",
    "title": "Average Hours on Social Media Daily",

    "scale": {
      "type": "linear",
      "domain": [
        0,
        10
      ]
    }, 
    "axis": {"titleFontSize": 14}
  },
  "color": {
    "field": "Category",
    "type": "nominal",
    "legend": null,
    "scale" : {"range" : ["#75B9BE"]}
  }
}
}