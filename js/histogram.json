
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Distribution of Daily Social Media Time",
  "data": {"url": "data/SM.csv"},
  
  

  "repeat": ["sleep_hours","stress_level","days_feeling_burnout_per_month","job_satisfaction_score", "actual_productivity_score", "coffee_consumption_per_day"],
  "repeat2": ["sleep_hours","stress_level","days_feeling_burnout_per_month","job_satisfaction_score", "actual_productivity_score", "coffee_consumption_per_day"],
  "columns": 2,
  "spec": {
    "width": 400,
    "height": 400,

    "mark": {"type": "bar", "color": "#4682b4"},

    "transform": [
          { "filter": "datum.daily_social_media_time > 0" },
          { "filter": "datum.sleep_hours > 0" }],



    "encoding": {
      "x": {
        "field": "daily_social_media_time",
        "type": "quantitative",
        "bin": {"step" : 0.5},
        "title": "Time Spent on Social Media (hours/day)"
      },
      "y": {
        "aggregate" : "average",
        "field":  {"repeat": "repeat"},
        "type": "quantitative",
        "title": {"repeat" : "repeat2"}
      },
      "tooltip": [
        {"field": "daily_social_media_time", "bin": true, "title": "Hours/Day"},
        {"aggregate": "average", "field": "sleep_hours", "title": "Count"}
      ]
    }
  }
}
